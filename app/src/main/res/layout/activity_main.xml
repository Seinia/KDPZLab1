<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <androidx.cardview.widget.CardView
        android:id="@+id/cvcat"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="12dp"
        app:cardCornerRadius="22dp"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tvnamecat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:layout_marginTop="10dp"
            android:text="Пірат"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvdesccat"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="81dp"
            android:layout_marginTop="32dp"
            android:text="Чемний котик"
            android:textSize="14sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/imgcat"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="12dp"
            android:src="@drawable/cat"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btncat"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="270dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@android:color/holo_purple"
            android:onClick="StartNewActivity"
            android:text="@string/details"
            android:textColor="@android:color/white" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvdog"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="12dp"
        app:cardCornerRadius="22dp"
        app:layout_constraintTop_toBottomOf="@id/cvcat">

        <TextView
            android:id="@+id/tvnamedog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:layout_marginTop="10dp"
            android:text="Манчестер"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvdescdog"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="81dp"
            android:layout_marginTop="32dp"
            android:text="Грайливий собака"
            android:textSize="14sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/imgdog"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="12dp"
            android:src="@drawable/dog"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btndog"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="270dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@android:color/holo_purple"
            android:text="@string/details"
            android:textColor="@android:color/white" />

    </androidx.cardview.widget.CardView>

    <androidx.cardview.widget.CardView
        android:id="@+id/cvchinchilla"
        android:layout_width="match_parent"
        android:layout_height="90dp"
        android:layout_margin="12dp"
        app:cardCornerRadius="22dp"
        app:layout_constraintTop_toBottomOf="@id/cvdog">

        <TextView
            android:id="@+id/tvnamechinchilla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="80dp"
            android:layout_marginTop="10dp"
            android:text="Гризлі"
            android:textColor="@android:color/black"
            android:textSize="18sp"
            android:textStyle="bold" />

        <TextView
            android:id="@+id/tvdescchinchilla"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="81dp"
            android:layout_marginTop="32dp"
            android:text="Спокійна шиншила"
            android:textSize="14sp"
            android:textStyle="normal" />

        <ImageView
            android:id="@+id/imgchinchilla"
            android:layout_width="60dp"
            android:layout_height="60dp"
            android:layout_margin="12dp"
            android:src="@drawable/chinchilla"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnchinchilla"
            android:layout_width="100dp"
            android:layout_height="50dp"
            android:layout_marginHorizontal="270dp"
            android:layout_marginTop="16dp"
            android:backgroundTint="@android:color/holo_purple"
            android:text="@string/details"
            android:textColor="@android:color/white" />

    </androidx.cardview.widget.CardView>

</androidx.constraintlayout.widget.ConstraintLayout>

